{
  "name": "wheel",
  "version": "1.0.0",
  "description": "A basic Fractal setup for a stand alone front end style guide.",
  "repository": "turnwithus/wheel",
  "bugs": {
    "url": "https://github.com/turnwithus/wheel/issues"
  },
  "main": "index.js",
  "scripts": {
    "build": "npm-run-all -s clean lint:css lint:js -p css:prod build:webpack img:prod -s fractal:static",
    "dev": "npm-run-all -s clean lint:css lint:js -p img  css build:webpack:dev fractal:start",
    "build:forge": "npm-run-all -s lint:css lint:js -p css:cms:prod webpack:prod -s img:cms:prod",
    "clean:cms": "rimraf ../site/themes/fortifi/{css/*,js/*,images/*}",
    "copy:css:cms": "cpx \"public/styles.css\" ../site/themes/fortifi/css",
    "css:cms:dev": "postcss src/assets/css/index.css -o ../site/themes/fortifi/css/styles.css -w",
    "css:cms:prod": "npm-run-all -s css:prod copy:css:cms",
    "js:cms:dev": "babel src/assets/js -w -o ../site/themes/fortifi/js/scripts.js --source-maps",
    "js:cms:prod": "babel src/assets/js -o ../site/themes/fortifi/js/scripts.js --compact=true --minified=true",
    "img:cms:dev": "cpx \"src/assets/images/**/*.{jpg,png,svg,gif}\" ../images -w || true",
    "img:cms:prod": "imagemin src/assets/images/**/*.{jpg,png,svg,gif} -o ../images || true",
    "start:cms": "npm-run-all -s clean:cms lint:css lint:js -p img:cms:dev css:cms:dev webpack:cms:dev fractal:start",
    "webpack:cms:dev": "cross-env NODE_ENV=development webpack -p --env.dev=dev --watch",
    "webpack:prod": "cross-env NODE_ENV=production webpack --env.dev=production --env.production",
    "start": "serve static",
    "clean": "rimraf public/{css/*,js/*,images/*}",
    "css": "postcss src/assets/css/index.css -o public/styles.css -w",
    "css:prod": "postcss src/assets/css/index.css -c postcss.config.prod.json -o public/styles.css",
    "fractal:start": "fractal start --sync",
    "fractal:static": "fractal build",
    "img": "cpx \"src/assets/images/**/*.{jpg,png,svg,gif}\" public/images -w || true",
    "img:prod": "imagemin src/assets/images/**/*.{jpg,png,svg,gif} -o public/images || true",
    "js": "babel src/assets/js -w -o public/scripts.js --source-maps",
    "js:prod": "babel src/assets/js -o public/scripts.js --compact=true --minified=true",
    "lint:css": "stylelint src/assets/css/**/*.css || true",
    "lint:js": "eslint src/assets/js || true",
    "build:webpack": "webpack -p --env.prod",
    "build:webpack:dev": "webpack --env.dev='local' --watch"
  },
  "engines": {
    "node": "^=6.11.3"
  },
  "author": "Turn",
  "license": "MIT",
  "dependencies": {
    "a11y-dialog": "^5.3.2",
    "dom-select": "^1.1.1",
    "form-pack": "^1.1.0-0",
    "jquery": "^3.3.1",
    "jquery-validation": "^1.17.0",
    "js-cookie": "^2.2.1",
    "object-assign": "^4.1.1",
    "reset-css": "^2.2.1",
    "serve": "^10.1.1",
    "whatwg-fetch": "^2.0.4"
  },
  "devDependencies": {
    "@frctl/fractal": "^1.1.5",
    "@frctl/handlebars": "krambuhl/fractal-handlebars",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "cpx": "^1.5.0",
    "css-mqpacker": "^6.0.1",
    "cross-env": "^5.2.0",
    "cssnano": "^3.10.0",
    "eslint": "^4.7.0",
    "eslint-config-airbnb-base": "^12.0.0",
    "eslint-plugin-import": "^2.18.2",
    "handlebars-helpers": "^0.10.0",
    "imagemin-cli": "^3.0.0",
    "npm-run-all": "^4.1.1",
    "postcss-cli": "^4.1.1",
    "postcss-cssnext": "^3.0.2",
    "postcss-discard-empty": "^2.1.0",
    "postcss-easy-import": "^3.0.0",
    "postcss-extend": "^1.0.5",
    "postcss-mixins": "^6.1.0",
    "postcss-nested": "^2.1.2",
    "postcss-pseudo-content-insert": "^0.3.0",
    "postcss-remove-root": "0.0.2",
    "postcss-reporter": "^5.0.0",
    "postcss-responsive-type": "^1.0.0",
    "progress-bar-webpack-plugin": "^1.10.0",
    "rimraf": "^2.6.2",
    "stylelint": "^8.1.1",
    "stylelint-config-standard": "^17.0.0",
    "webpack": "^3.6.0",
    "webpack-config-utils": "^2.3.0"
  }
}
