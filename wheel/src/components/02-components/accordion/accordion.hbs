<div
  {{classlist
    "accordion"
    className
  }}
>
  <input class="accordion__input a11y a11y-visually-hidden" type="checkbox" id="{{id}}">
  <div class="accordion__item" aria-labelledby="{{id}}">
    <label class="accordion__label" for="{{id}}">
      <span class="accordion__decor bg--gradient"></span>
      <span class="accordion__title">{{title}}</span>
      <i class="accordion__indicator"></i>
    </label>

    <div class="accordion__content rich-text" role="region">
      {{{@partial-block}}}
    </div> <!--/ accordion__content.rich-text -->
  </div> <!--/ accordion__item -->
</div> <!--/ accordion -->
